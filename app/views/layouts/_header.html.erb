<header>
  <div class="left-nav">
    <div>
      <a href="<%= root_path %>">What's in the fridge</a>
    </div>

    <div class="search-box">
      <%= react_component('RecipeSearcher') %>
    </div>
  </div>
  <div class="right-nav">
    <% if user_signed_in? %>
        <div>
          <%= current_user.email %>
        </div>
        <div>
          <%= link_to destroy_user_session_path, :method => :delete do %>
              <span class='glyphicon glyphicon-log-out'></span>
              <span class="hidden-xs hidden-sm">Log out</span>
          <% end %>
        </div>
    <% else %>
        <div>
          <%= link_to new_user_session_path do %>
              <span class='glyphicon glyphicon-log-in'></span> <span class="hidden-xs">Log in</span>
          <% end %>
        </div>
        <div>
          <%= link_to new_user_registration_path do %>
              <span class='glyphicon glyphicon-user'></span> <span class="hidden-xs">Sign up</span>
          <% end %>
        </div>
    <% end %>
  </div>
</header>
